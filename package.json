{
  "name": "web-application-first-assignment",
  "version": "1.0.0",
  "description": "Backend services for RecipeHub web application.",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "prod": "cp .envprod .env && tsc -p tsconfig.prod.json && node ./dist/src/app.js",
    "start": "cross-env NODE_ENV=development ts-node copyEnv.ts && tsc && node ./dist/src/app.js",
    "dev": "nodemon ./src/app.ts",
    "test": "tsc && jest --detectOpenHandles --coverage --forceExit",
    "testUser": "tsc && jest --detectOpenHandles --forceExit users.test.ts",
    "testRecipe": "tsc && jest --detectOpenHandles --forceExit recipes.test.ts",
    "testComment": "tsc && jest --detectOpenHandles --forceExit comments.test.ts",
    "testAuth": "tsc && jest --detectOpenHandles --forceExit auth.test.ts",
    "lint": "eslint . --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ofekamirav/Web-Application-First-assignment"
  },
  "author": "Ofek Amirav",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.1",
    "google-auth-library": "^10.2.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.2",
    "multer": "^2.0.2",
    "nodemon": "^3.1.7",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "sharp": "^0.34.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^2.0.0",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "cpx": "^1.5.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.16.0",
    "globals": "^15.13.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0"
  }
}
